{
  "manifest_version": 3,
  "name": "RydeeNLP",
  "version": "1.0.0",
  "description": "Text analysis extension",
  "permissions": ["activeTab"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src http://localhost:5000; object-src 'self'"
  }
}